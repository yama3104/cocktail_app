<h1>一覧</h1>

<div class="container">

<%= form_tag cocktails_path, :method => 'get' do %> 
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <% end %>
  
  <%= yield %>

  <%= link_to "一覧", :controller => "cocktails", :action => "index" %></br>

  <%= link_to "とりあえず基本の", :controller => "table", :action => "show" %>

  <div class="row">
    <% @cocktail.each do |cocktail| %>
    <div class="col-sm-4 col-xs-6">
      <div class="box11">
	<%= link_to cocktail.name,cocktail_path(cocktail.id)%></br>
	<%= cocktail.base %></br>
	<%= cocktail.mixer %>
      </div>
      
    </div>
    <% end %>
  </div>
  <%= paginate @cocktail %>
</div>
